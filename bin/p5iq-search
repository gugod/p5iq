#!/usr/bin/env perl
use v5.14;
use warnings;

use FindBin;
use lib "${FindBin::Bin}/../local/lib/perl5";
use lib "${FindBin::Bin}/../lib";

use P5iq::Search;

use Getopt::Long;

GetOptions(
    "s|size=i" => \(my $size)
);
my $query = shift(@ARGV) or die "query required";

P5iq::Search::search_p5iq_index($query, $size);
