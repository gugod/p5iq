#!/usr/bin/env perl
use v5.14;
use warnings;

use FindBin;
use lib "${FindBin::Bin}/../local/lib/perl5";
use lib "${FindBin::Bin}/../lib";

use P5iq::Search;

use Getopt::Long;

my %args;
GetOptions(
    \%args,
    "size=i",
    "in=s",
    "call",
    "method",
    "function",
    "void-context"
);

my $query_string = shift;

$args{size} //= (($ENV{LINES} || 27)- 2);

P5iq::Search::locate_sub(
    \%args, $query_string,
    sub {
        my $res = shift;
        for (@{ $res->{hits}{hits} }) {
            my $src =$_->{_source};
            say join(":", $src->{file}, $src->{line_number}, $src->{row_number}). "\n$src->{content}\n";
        }
    });
