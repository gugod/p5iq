#!/usr/bin/env perl
use v5.18;
use warnings;

use FindBin;
use lib "${FindBin::Bin}/../lib";

use P5iq::Search;

use Getopt::Long;

GetOptions(
    "s|size=i" => \(my $size = 10),
    "symbol" => \(my $symbol),
    "sub-named" => \(my $sub_named),
);

my $query_string = shift // die "No query string...";
P5iq::Search::locate_symbols($query_string, $size, $symbol, $sub_named);

