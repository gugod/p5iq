#!/usr/bin/env perl
use v5.14;
use warnings;

use FindBin;
use lib "${FindBin::Bin}/../local/lib/perl5";
use lib "${FindBin::Bin}/../lib";

use P5iq::Search;

use Getopt::Long;

my %args;
GetOptions(
    \%args,
    "size=i",
    "in=s",
);

my $query_string = shift;

$args{size} //= (($ENV{LINES} || 27)- 2);

P5iq::Search::locate_function(\%args, $query_string);
