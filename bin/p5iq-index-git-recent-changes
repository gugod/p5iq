#!/usr/bin/env perl

use v5.14;
use warnings;

use FindBin;
use lib "${FindBin::Bin}/../local/lib/perl5";
use lib "${FindBin::Bin}/../lib";

use Getopt::Long;

use P5iq::Index;

my %args;
GetOptions(
    \%args,
    "project=s",
);

die "Usage: $0 [DIRs|FILEs]\n" if not @ARGV;
P5iq::Index::index_git_recent_changes(\%args, @ARGV);
